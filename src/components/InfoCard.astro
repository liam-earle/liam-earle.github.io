---
import { TypeAnimation } from 'react-type-animation';
const { subject, subjectLink, cursor } = Astro.props
---
<div class="block p-6 max-w-4xl w-full bg-gray-900 rounded-lg border border-gray-800 shadow-md text-center content-center ">
	<a class="mb-2 text-4xl font-bold tracking-tight text-gray-200" href={subjectLink}>
		{subject}
	</a>
	<div class="text-xl text-gray-200 drop-shadow-lg">
		<slot />
	</div>
</div>